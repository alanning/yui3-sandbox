@CHARSET "UTF-8";

.yui3-dp-search {
	font-family: Arial, sans-serif;
	font-size: 12pt;
}

.yui3-dp-search-input-wrapper {
	position: relative;
	height: 30px;
}

.yui3-dp-search-input {
	position: absolute;
	padding-left: 1em;
}

.yui3-dp-search-input-tip {
	color: #888888;
}

.yui3-dp-search-field-wrapper {
	position: absolute;
	display: none;
}
	
.yui3-dp-search-field {
	padding: 0.25em;
	background-color: #ffffff;
	min-width: 10em;
}

.yui3-dp-search-pulldown {
	position: absolute;
	top: 0.51em;
	left: 0.25em;
}